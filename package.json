{
  "name": "routex.js",
  "version": "0.1.7",
  "description": "Tiny library to manage dynamic and universal routes in Next.js",
  "source": "src/index.js",
  "module": "dist/routex.es.js",
  "main": "dist/routex.js",
  "umd:main": "dist/routex.umd.js",
  "author": "alexhoma <alexcm.14@gmail.com>",
  "repository": "alexhoma/routex.js",
  "license": "ISC",
  "keywords": [
    "next",
    "nextjs",
    "react",
    "reactjs",
    "router",
    "routes",
    "routing",
    "dynamic-routes",
    "universal",
    "isomorphic"
  ],
  "scripts": {
    "build": "microbundle",
    "test": "jest",
    "mutants": "stryker run",
    "coverage": "jest t --coverage",
    "size": "bundlesize",
    "prepare": "npm run coverage && npm run build && npm run size",
    "release": "npm run prepare && git commit -am $npm_package_version && git tag $npm_package_version && git push && git push --tags && npm publish"
  },
  "devDependencies": {
    "@babel/core": "^7.6.4",
    "@babel/preset-env": "^7.6.3",
    "@stryker-mutator/core": "^2.1.0",
    "@stryker-mutator/html-reporter": "^2.1.0",
    "@stryker-mutator/javascript-mutator": "^2.1.0",
    "@stryker-mutator/jest-runner": "^2.1.0",
    "babel-jest": "^24.9.0",
    "bundlesize": "^0.17.2",
    "codecov": "^3.6.1",
    "husky": "^3.0.9",
    "jest": "^24.9.0",
    "microbundle": "^0.11.0"
  },
  "dependencies": {
    "path-to-regexp": "^3.1.0"
  },
  "bundlesize": [
    {
      "path": "./dist/routex.js",
      "maxSize": "1 Kb"
    }
  ]
}
